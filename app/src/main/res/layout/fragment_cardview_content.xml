<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:clickable="true"
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:contentPadding="10dp"
        android:paddingTop="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <edu.buu.daowe.defui.SelectableRoundedImageView
                    android:layout_width="26dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/img_card_status"
                    android:layout_height="26dp"
                    android:src="@mipmap/form_checkbox_checked" />

                <TextView
                    android:layout_weight="2"
                    android:id="@+id/tv_card_date"
                    android:layout_gravity="center"
                    android:textColor="@color/pure_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1970年1月1日" />

                <TextView
                    android:id="@+id/tv_card_coursestatus"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pure_black"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:text="N/A" />


            </LinearLayout>

            <View
                android:layout_height="1dp"
                android:background="@color/color_10"
                android:layout_width="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_card_course_num"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pure_black"
                    android:textSize="40dp"
                    android:text="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_card_course_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="马克思社会主义原理基本概论"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/pure_black"
                        android:textStyle="bold"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp">
                        <edu.buu.daowe.defui.SelectableRoundedImageView
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            android:layout_width="16dp"
                            android:id="@+id/img_time"
                            android:layout_height="16dp"
                            android:src="@mipmap/ic_start_time" />
                        <TextView
                            android:id="@+id/tv_card_course_time"
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08:00-9:30"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/pure_black"
                            android:textSize="15dp" />
                        <edu.buu.daowe.defui.SelectableRoundedImageView
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_width="16dp"
                            android:id="@+id/img_place"
                            android:layout_height="16dp"
                            android:src="@mipmap/ic_place" />
                        <TextView
                            android:id="@+id/tv_card_course_position"
                            android:textSize="15dp"
                            android:gravity="bottom"
                            android:layout_marginLeft="3dp"
                            android:layout_gravity="bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/pure_black"
                            android:text="综合实训楼7A-7005" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <edu.buu.daowe.defui.SelectableRoundedImageView
                        android:id="@+id/img_techer"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="18dp"
                        android:src="@mipmap/ic_teacher" />

                    <TextView
                        android:id="@+id/tv_card_course_teacher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="33dp"
                        android:layout_marginRight="10dp"
                        android:text="刘建国"
                        android:textColor="@color/pure_black"
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>